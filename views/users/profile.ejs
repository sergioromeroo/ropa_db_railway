                  <li><a href="#">Layout Sticky</a></li>
                  <li><a href="#">Layout Sticky 2</a></li>
                  <li><a href="#">Layout Scroll</a></li>
                </ul>
              </div>
            </div>
          </div>
        </li>
        <li><a href="">Blog</a></li>
        <li>
          <a class="desktop-item">Login / Register <span><i class="fas fa-chevron-down"></i></span></a>
          <input type="checkbox" id="showdrop1" />
          <label for="showdrop1" class="mobile-item">Vendors <span><i class="fas fa-chevron-down"></i></span></label>
          <ul class="drop-menu1">
            <li><a href="/users/register">Registrarse</a></li>
            <li><a href="/users/login">Iniciar Session</a></li>
          </ul>
        </li>

        <li>
          <% if (locals.userLogin) { %>  
                          <!-- vista usuario logeado -->
            <a class="desktop-item">Perfil <span><i class="fas fa-chevron-down"></i></span></a>
            <input type="checkbox" id="showdrop2" />
            <label for="showdrop2" class="mobile-item">Page <span><i class="fas fa-chevron-down"></i></span></label>
            <ul class="drop-menu2">
              <li><a href="">bienvenido: <%= locals.userLogin.name %></a></li>
              <li><a href="/users/logout">Cerrar Session</a></li>
            </ul>
            <% if (locals.userLogin.rol===2) { %>
              <!-- vista solo del administrador -->
              <input type="checkbox" id="showdrop2" />
              <label for="showdrop2" class="mobile-item">Page <span><i class="fas fa-chevron-down"></i></span></label>
              <ul class="drop-menu2">
                <li><a href="/products/add">Agregar Producto</a></li>
                <li><a href="/products/admin">Administracion</a></li>
                <li><a href="">bienvenido: <%= locals.userLogin.name %></a></li>
                <li><a href="/users/logout">Cerrar Session</a></li>
              </ul>

              <% } %>

                <% }else{ %>
                  <!-- usuario no logeado recien entra -->
                  <a class="desktop-item">Perfil <span><i class="fas fa-chevron-down"></i></span></a>
                  <input type="checkbox" id="showdrop2" />
                  <label for="showdrop2" class="mobile-item">Page <span><i
                        class="fas fa-chevron-down"></i></span></label>
                  <ul class="drop-menu2">
                    <br>
                    <li><a href="">No has iniciado session</a></li>
                  </ul>

                  <% } %>

        </li>



      </ul>

      <label for="" class="btn open-btn"><i class="fas fa-bars"></i></label>
    </div>
  </nav>

  
    <!-- empieza perfil -->


    <main class="container mt-5">
      <div class="card">

      <div class="row">
          <div class="col-4">
              <img class="img-fluid rounded-start" src="/images/avatar/<%= user.avatar %> " alt="">
          </div>
          <div class="col-8 mx-auto mt-5">
                  <div class="card-body">
                      <h5 class="card-title text-center">PERFIL DE USUARIO</h5>
                      <form action="/users/update/<%= user.id %>?_method=PUT" class="row" method="POST" novalidate enctype="multipart/form-data">
                          
                        <div class="col-12 col-md-6 mb-3">
                              <label for="exampleInputName" class="form-label">Nombre</label>
                              <input type="text" class="form-control" id="exampleInputName"
                                  aria-describedby="emailHelp" name="name"
                                  value="<%= user.name %>">
                              <span class="text-danger small">
                                  <%= locals.errores && locals.errores.name ? errores.name.msg : null %>
                              </span>
                              <button type="submit" class="btn btn-success my-3" onclick="return confirm('seguro que quieres cambiar el nombre')">Guardar cambios</button>
                              <a href="/" class="btn btn-secondary">Cancelar</a>
                          </div>



                          <div class="col-12 col-md-6 mb-3">
                              <label for="exampleInputEmail1" class="form-label">Email</label>
                              <input type="email" class="form-control" id="exampleInputEmail1"
                                  aria-describedby="emailHelp" name="email" readonly value="<%= user.email %>">
                              <span class="text-danger small">
                                  <%= locals.errores && locals.errores.email ? errores.email.msg : null %>
                              </span>
                          </div>
                          <div class="col-12 col-md-6 mb-3">
                              <label for="exampleInputPassword1" class="form-label">Nueva contrase√±a</label>
                              <input type="password" class="form-control" id="exampleInputPassword1"
                                  name="password">
                              <span class="text-danger small">
                                  <%= locals.errores && locals.errores.password ? errores.password.msg :
                                      null %>
                              </span>
                          </div>
                          <div class="col-12 col-md-6 mb-3">
                                  <label for="avatar" class="btn btn-primary my-3">Subir imagen</label>
                                  <input type="file" name="avatar" id="avatar" hidden>

                                  <button type="submit" class="btn btn-success my-3">Guardar cambios</button>
                                  <a href="/" class="btn btn-secondary">Cancelar</a>
                          
                          </div>
                      </form>
                  </div>
              </div>
              
          </div>

      </div>
</div>
</div>


